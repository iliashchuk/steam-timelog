{
  "$schema": "http://json.schemastore.org/prettierrc",
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 120,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "tabWidth": 2,
  "overrides": [
    {
      "files": [".eslintrc", ".huskyrc", ".lintstagedrc", ".prettierrc", "*.code-snippets"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["*.svg"],
      "options": {
        "parser": "html"
      }
    }
  ]
}
